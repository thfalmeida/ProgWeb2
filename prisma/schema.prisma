generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definindo o ENUM para o status da fatura
enum FaturaStatus {
  ABERTA
  FECHADA
  PAGA
}

enum UserRole {
  CLIENTE
  FUNCIONARIO
}

model User {
  id        Int      @id @default(autoincrement())
  login     String   @unique
  password  String
  role      UserRole
}

model Pet {
  id               Int                @id @default(autoincrement())
  nome             String
  clienteId        Int
  cliente          Cliente            @relation(fields: [clienteId], references: [id])
  ServicoRealizado ServicoRealizado[]
}

model Cliente {
  id               Int                @id @default(autoincrement())
  nome             String
  telefone         String
  endereco         String
  pet              Pet[]
  fatura           Fatura[]
  servicoRealizado ServicoRealizado[]
}

model Funcionario {
  id               Int                @id @default(autoincrement())
  nome             String
  servicoRealizado ServicoRealizado[]
}

model Servico {
  id               Int                @id @default(autoincrement())
  nome             String
  descricao        String
  valor            Float
  servicoRealizado ServicoRealizado[]
}

model Fatura {
  id               Int                @id @default(autoincrement())
  clienteId        Int
  cliente          Cliente            @relation(fields: [clienteId], references: [id])
  fechada          FaturaStatus       @default(ABERTA)
  servicoRealizado ServicoRealizado[]
}

model ServicoRealizado {
  id            Int         @id @default(autoincrement())
  servicoId     Int
  faturaId      Int
  clienteId     Int
  funcionarioId Int
  petId         Int
  servico       Servico     @relation(fields: [servicoId], references: [id])
  fatura        Fatura      @relation(fields: [faturaId], references: [id])
  cliente       Cliente     @relation(fields: [clienteId], references: [id])
  funcionario   Funcionario @relation(fields: [funcionarioId], references: [id])
  pet           Pet         @relation(fields: [petId], references: [id])
}
